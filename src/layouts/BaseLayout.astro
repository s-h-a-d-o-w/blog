---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  permalink: string;

  isArticle?: boolean;
  isRoot?: boolean;
  slug?: string
  publishDate?: string
  lastUpdated?: string
}
const { title, description, permalink, isArticle, isRoot, slug, publishDate, lastUpdated } = Astro.props;
---
<html lang="en">
<head>
  <BaseHead title={title} description={description} permalink={permalink} isArticle={isArticle} slug={slug} publishDate={publishDate} lastUpdated={lastUpdated} />
</head>
<body>
  <div class="layout">
    <Header isRoot={isRoot} />

    <main>
      <slot />
    </main>

    <Footer />
  </div>
</body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
  }

  main {
    flex: 1;
    position: relative;
    margin: 0 auto;
    max-width: 1400px;
    padding: 0em 2em 4em 2em;
    box-sizing: border-box;
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
