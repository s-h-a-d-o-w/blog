{
  "name": "blog",
  "version": "0.0.1",
  "scripts": {
    "build": "docker compose -f kroki/docker-compose.yml up -d && astro build && docker compose -f kroki/docker-compose.yml down",
    "dev": "concurrently \"docker compose -f kroki/docker-compose.yml up\" \"astro dev --host\"",
    "e2e": "rimraf test-results && playwright test",
    "preview": "astro --host preview",
    "start": "pnpm build && serve dist",
    "test": "vitest"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.0.2",
    "@astrojs/mdx": "^3.1.9",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/svelte": "^5.7.3",
    "@playwright/test": "^1.48.2",
    "astro": "^4.16.13",
    "rehype-external-links": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "rehype-rewrite": "^4.0.2",
    "remark-kroki": "^0.3.7",
    "remark-merge-data": "^1.0.9",
    "remark-smartypants": "^2.0.0",
    "sass": "^1.83.4",
    "typescript": "^5.6.3",
    "vega-lite": "^5.23.0",
    "vitest": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "tsx": "^4.19.2"
  }
}
